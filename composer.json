{
    "name": "surfnet/stepup-saml-bundle",
    "type": "symfony-bundle",
    "description": "A Symfony 4 bundle that integrates the simplesamlphp\\saml2 library with Symfony.",
    "keywords": ["surfnet", "StepUp", "simplesamlphp", "SAML", "SAML2"],
    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.3|^8.0",
        "ext-dom": "*",
        "ext-openssl": "*",
        "robrichards/xmlseclibs": "^3.1.1",
        "simplesamlphp/saml2": "^4.6.4",
        "symfony/dependency-injection": "^4.4|^5.4",
        "symfony/framework-bundle": "^4.4|^5.4",
        "symfony/templating": "^4.4|^5.4",
        "twig/twig": "^2 || ^3"
    },
    "require-dev": {
        "jasny/phpunit-xsdvalidation": "^1.0",
        "mockery/mockery": "^1.5",
        "phpmd/phpmd": "^2.13",
        "phpunit/phpunit": "^9.5",
        "psr/log": "~1.0",
        "sebastian/exporter": "^4.0.5",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.7.1",
        "symfony/phpunit-bridge": "^4.4|^5.4"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Surfnet\\SamlBundle\\": "src"
        }
    }
}
